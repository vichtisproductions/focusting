<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView10Stage6Toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="@string/tvStage6ToastQuestionText" />

    <RadioGroup
        android:id="@+id/groupStage6Toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView10Stage6Toast">

        <RadioButton
            android:id="@+id/rdbNoToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="true"
            android:text="@string/rdbStage6NoInformationText" />

        <RadioButton
            android:id="@+id/rdbInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/rdbStage6InformationText" />

        <RadioButton
            android:id="@+id/rdbThumbsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/rdbStage6InformationandThumbsUpText" />
    </RadioGroup>

    <Button
        android:id="@+id/btnApplyStage6Toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnStage6ToastSetPreferenceText"
        android:layout_below="@+id/groupStage6Toast"
        android:layout_centerHorizontal="true" />
</RelativeLayout>