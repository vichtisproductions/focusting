<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".func_debug.EditSetupActivity">

    <Button
        android:id="@+id/edit_setup_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onStartDateClick"
        android:text="@string/debug_set_start_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_setup_group_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/debug_set_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_setup_start_date" />

    <Spinner
        android:id="@+id/edit_setup_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:entries="@array/focusting_groups"
        app:layout_constraintBottom_toBottomOf="@+id/edit_setup_group_text"
        app:layout_constraintStart_toEndOf="@+id/edit_setup_group_text"
        app:layout_constraintTop_toTopOf="@+id/edit_setup_group_text"
        tools:listitem="@android:layout/simple_spinner_item" />


</android.support.constraint.ConstraintLayout>