<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="@string/target_set_view_header" />


    <!-- New segmented control buttons -->
    <org.coderswithoutborders.deglancer.utils.AwesomeRadioButton.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/rdb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_set_view_5_percent"
            style="@style/RadioButton"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <RadioButton
            android:id="@+id/rdb10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_set_view_10_percent"
            style="@style/RadioButton"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <RadioButton
            android:id="@+id/rdb15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_set_view_15_percent"
            style="@style/RadioButton"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

    </org.coderswithoutborders.deglancer.utils.AwesomeRadioButton.SegmentedGroup>

</RelativeLayout>